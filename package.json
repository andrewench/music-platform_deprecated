{
  "name": "music-platform",
  "version": "0.1.0",
  "description": "The music platform for listening to music",
  "scripts": {
    "postinstall": "husky install client/.husky && husky install server/.husky",

    "client:install": "cd client && yarn install",
    "server:install": "cd server && yarn install",
    "desktop:install": "cd desktop && yarn install",

    "client:dev": "cd client && yarn dev",
    "server:dev": "cd server && yarn server:dev",
    "desktop:dev": "cd desktop && yarn dev"
  },
  "repository": "https://github.com/andrewench/music-platform",
  "author": "andrewench",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "husky": "^8.0.3"
  }
}
