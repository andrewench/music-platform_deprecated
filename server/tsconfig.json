{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@/routes": ["./routes"],
      "@/services": ["./services"],
      "@/types": ["./types"],
      "@/models": ["./models"],
      "@/middlewares": ["./middlewares"]
    }
  },
  "files": [
    "index.d.ts"
  ],
  "include": ["./src/**/*", "webpack.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
  }
}
